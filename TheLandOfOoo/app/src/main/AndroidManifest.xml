<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/penguin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/penguin_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheLandOfOoo"
        tools:targetApi="31">

        <!-- Make Splash the launcher activity -->
        <activity
            android:name=".Splash"
            android:exported="true"> <!-- must be true if it has an intent filter -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity is just a normal screen now -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>
